<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="221dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/madisonbig"
        android:background="#0000FF" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="2006-2010" />
    
    <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textStyle="italic|bold"
        	android:text="Bag Room Manager" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Coordinated special events and daily operations for 300+ member" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Setting up and taking down golf tournaments and other events" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Maintenance of golf carts and errands" />
    
</LinearLayout>
