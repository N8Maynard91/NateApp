    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Researched and compiled market data for new and current clients" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Worked with developers and gained experience with Ruby on Rails" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-Facilitated problemsolving between marketing department and software engineers" />
    
